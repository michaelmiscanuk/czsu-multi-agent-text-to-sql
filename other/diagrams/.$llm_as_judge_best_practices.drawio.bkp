    <diagram id="llm-as-judge-best-practices" name="LLM-as-Judge Best Practices">
        <mxGraphModel dx="866" dy="1588" grid="1" gridSize="10" guides="1" tooltips="1" connect="1" arrows="1" fold="1" page="1" pageScale="1" pageWidth="1169" pageHeight="827" math="0" shadow="0">
            <root>
                <mxCell id="0"/>
                <mxCell id="1" parent="0"/>
                <mxCell id="bp1_box" value="&lt;b&gt;1. FEW SHOT PROMPTING&lt;/b&gt;" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#e1bee7;strokeColor=#7B1FA2;fontSize=12;fontStyle=1;gradientColor=#ba68c8;align=center;verticalAlign=top;spacingTop=4;fontFamily=Helvetica;fontColor=default;spacing=2;" parent="1" vertex="1">
                    <mxGeometry x="40" y="40" width="260" height="140" as="geometry"/>
                </mxCell>
                <mxCell id="bp1_desc" value="&lt;span&gt;Provide Examples in Prompt&lt;/span&gt;&lt;br&gt;&lt;br&gt;• Include 1-2 examples of good/bad outputs&lt;br&gt;• Show expected score for each example&lt;br&gt;• More examples ≠ better (1-shot often optimal)&lt;br&gt;• Keep examples relevant to task" style="text;html=1;strokeColor=none;fillColor=#f3e5f5;align=left;verticalAlign=top;whiteSpace=wrap;rounded=1;fontSize=11;fontFamily=Helvetica;fontColor=#4a148c;spacingLeft=8;fontStyle=0;spacingTop=4;" parent="1" vertex="1">
                    <mxGeometry x="50" y="70" width="240" height="100" as="geometry"/>
                </mxCell>
                <mxCell id="bp2_box" value="&lt;b&gt;2. STEP DECOMPOSITION&lt;/b&gt;" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#dae8fc;strokeColor=#3399FF;fontSize=12;fontStyle=1;gradientColor=#66B2FF;align=center;verticalAlign=top;spacingTop=4;fontFamily=Helvetica;fontColor=default;spacing=2;" parent="1" vertex="1">
                    <mxGeometry x="320" y="40" width="260" height="140" as="geometry"/>
                </mxCell>
                <mxCell id="bp2_desc" value="&lt;span&gt;Break Down Complex Decisions&lt;/span&gt;&lt;br&gt;&lt;br&gt;• Split big subjective tasks into smaller steps&lt;br&gt;• Define clear reasoning criteria&lt;br&gt;• Guide LLM through evaluation logic&lt;br&gt;• Make implicit requirements explicit" style="text;html=1;strokeColor=none;fillColor=#E3F2FD;align=left;verticalAlign=top;whiteSpace=wrap;rounded=1;fontSize=11;fontFamily=Helvetica;fontColor=#01579B;spacingLeft=8;fontStyle=0;spacingTop=4;" parent="1" vertex="1">
                    <mxGeometry x="330" y="70" width="240" height="100" as="geometry"/>
                </mxCell>
                <mxCell id="bp3_box" value="&lt;b&gt;3. CRITERIA DECOMPOSITION&lt;/b&gt;" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#b2dfdb;strokeColor=#00796B;fontSize=12;fontStyle=1;gradientColor=#80CBC4;align=center;verticalAlign=top;spacingTop=4;fontFamily=Helvetica;fontColor=default;spacing=2;" parent="1" vertex="1">
                    <mxGeometry x="600" y="40" width="260" height="140" as="geometry"/>
                </mxCell>
                <mxCell id="bp3_desc" value="&lt;span&gt;One Criterion Per Evaluation&lt;/span&gt;&lt;br&gt;&lt;br&gt;• Each evaluation monitors single criteria&lt;br&gt;• Separate: relevance, clarity, accuracy&lt;br&gt;• Don't combine multiple objectives&lt;br&gt;• Avoid confusing the judge" style="text;html=1;strokeColor=none;fillColor=#E0F2F1;align=left;verticalAlign=top;whiteSpace=wrap;rounded=1;fontSize=11;fontFamily=Helvetica;fontColor=#004D40;spacingLeft=8;fontStyle=0;spacingTop=4;" parent="1" vertex="1">
                    <mxGeometry x="610" y="70" width="240" height="100" as="geometry"/>
                </mxCell>
                <mxCell id="bp4_box" value="&lt;b&gt;4. EVALUATION TEMPLATE&lt;/b&gt;" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#fff9c4;strokeColor=#F57F17;fontSize=12;fontStyle=1;gradientColor=#FFF59D;align=center;verticalAlign=top;spacingTop=4;fontFamily=Helvetica;fontColor=default;spacing=2;" parent="1" vertex="1">
                    <mxGeometry x="880" y="40" width="260" height="140" as="geometry"/>
                </mxCell>
                <mxCell id="bp4_desc" value="&lt;span&gt;Provide Clear Grading Rubric&lt;/span&gt;&lt;br&gt;&lt;br&gt;• Define categorical integer scale (e.g., 1-5)&lt;br&gt;• Explain what each score means&lt;br&gt;• Avoid float scores&lt;br&gt;• Use chain-of-thought evaluation steps" style="text;html=1;strokeColor=none;fillColor=#FFFDE7;align=left;verticalAlign=top;whiteSpace=wrap;rounded=1;fontSize=11;fontFamily=Helvetica;fontColor=#F57F17;spacingLeft=8;fontStyle=0;spacingTop=4;" parent="1" vertex="1">
                    <mxGeometry x="890" y="70" width="240" height="100" as="geometry"/>
                </mxCell>
                <mxCell id="bp5_box" value="&lt;b&gt;5. STRUCTURED OUTPUTS&lt;/b&gt;" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#c8e6c9;strokeColor=#388E3C;fontSize=12;fontStyle=1;gradientColor=#A5D6A7;align=center;verticalAlign=top;spacingTop=4;fontFamily=Helvetica;fontColor=default;spacing=2;" parent="1" vertex="1">
                    <mxGeometry x="180" y="210" width="260" height="140" as="geometry"/>
                </mxCell>
                <mxCell id="bp5_desc" value="&lt;span&gt;Constrain Format to JSON&lt;/span&gt;&lt;br&gt;&lt;br&gt;• Remove ambiguity with structured outputs&lt;br&gt;• Use JSON for agent outputs&lt;br&gt;• Standardize evaluation inputs&lt;br&gt;• Especially for tool interactions" style="text;html=1;strokeColor=none;fillColor=#E8F5E9;align=left;verticalAlign=top;whiteSpace=wrap;rounded=1;fontSize=11;fontFamily=Helvetica;fontColor=#1B5E20;spacingLeft=8;fontStyle=0;spacingTop=4;" parent="1" vertex="1">
                    <mxGeometry x="190" y="240" width="240" height="100" as="geometry"/>
                </mxCell>
                <mxCell id="bp6_box" value="&lt;b&gt;6. PROVIDE EXPLANATIONS&lt;/b&gt;" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#e8eaf6;strokeColor=#3F51B5;fontSize=12;fontStyle=1;gradientColor=#c5cae9;align=center;verticalAlign=top;spacingTop=4;fontFamily=Helvetica;fontColor=default;spacing=2;" vertex="1" parent="1">
                    <mxGeometry x="460" y="210" width="260" height="140" as="geometry"/>
                </mxCell>
                <mxCell id="bp6_desc" value="&lt;span&gt;LLM Explains Its Score&lt;/span&gt;&lt;br&gt;&lt;br&gt;• Require reasoning for each score&lt;br&gt;• Chain-of-thought approach&lt;br&gt;• Helps standardize scoring&lt;br&gt;• Speeds up human alert review" style="text;html=1;strokeColor=none;fillColor=#E8EAF6;align=left;verticalAlign=top;whiteSpace=wrap;rounded=1;fontSize=11;fontFamily=Helvetica;fontColor=#283593;spacingLeft=8;fontStyle=0;spacingTop=4;" vertex="1" parent="1">
                    <mxGeometry x="470" y="240" width="240" height="100" as="geometry"/>
                </mxCell>
                <mxCell id="bp7_box" value="&lt;b&gt;7. SCORE SMOOTHING&lt;/b&gt;" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#e1f5fe;strokeColor=#0277BD;fontSize=12;fontStyle=1;gradientColor=#81d4fa;align=center;verticalAlign=top;spacingTop=4;fontFamily=Helvetica;fontColor=default;spacing=2;" vertex="1" parent="1">
                    <mxGeometry x="740" y="210" width="260" height="140" as="geometry"/>
                </mxCell>
                <mxCell id="bp7_desc" value="&lt;span&gt;Reduce Random Fluctuations&lt;/span&gt;&lt;br&gt;&lt;br&gt;• Smooth raw scores to catch signal&lt;br&gt;• Re-run evaluations on soft failures&lt;br&gt;• Set thresholds or use anomaly detection&lt;br&gt;• Balance noise filtering vs real issues" style="text;html=1;strokeColor=none;fillColor=#E1F5FE;align=left;verticalAlign=top;whiteSpace=wrap;rounded=1;fontSize=11;fontFamily=Helvetica;fontColor=#01579B;spacingLeft=8;fontStyle=0;spacingTop=4;" vertex="1" parent="1">
                    <mxGeometry x="750" y="240" width="240" height="100" as="geometry"/>
                </mxCell>
            </root>
        </mxGraphModel>

        <mxCell id="bp1_box" value="&lt;b&gt;1. FEW SHOT PROMPTING&lt;/b&gt;" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#e1bee7;strokeColor=#7B1FA2;fontSize=12;fontStyle=1;gradientColor=#ba68c8;align=center;verticalAlign=top;spacingTop=4;fontFamily=Helvetica;fontColor=default;spacing=2;" parent="1" vertex="1">

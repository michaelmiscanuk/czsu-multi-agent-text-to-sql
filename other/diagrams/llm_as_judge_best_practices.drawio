        <mxCell id="bp5_desc" value="&lt;span&gt;Constrain Format to JSON&lt;/span&gt;&lt;br&gt;&lt;br&gt;• Remove ambiguity with structured outputs&lt;br&gt;• Use JSON for agent outputs" style="text;html=1;strokeColor=none;fillColor=#E8F5E9;align=left;verticalAlign=top;whiteSpace=wrap;rounded=1;fontSize=11;fontFamily=Helvetica;fontColor=#1B5E20;spacingLeft=8;fontStyle=0;spacingTop=4;" parent="1" vertex="1">
